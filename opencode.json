{
    "$schema": "https://opencode.ai/config.schema.json",
    "plugin": [
        "oh-my-opencode@latest"
    ],
    "mcpServers": {
        "mammoth": {
            "command": "node",
            "args": [
                "services/node-daemon/mammoth-mcp.mjs"
            ],
            "env": {
                "MAMMOTH_NODE_URL": "http://127.0.0.1:7340",
                "MAMMOTH_NODE_TOKEN": "local-dev-token"
            }
        }
    }
}